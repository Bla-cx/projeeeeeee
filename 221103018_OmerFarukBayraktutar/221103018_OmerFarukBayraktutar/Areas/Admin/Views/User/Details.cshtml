@model _221103018_OmerFarukBayraktutar.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Detayları";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Detayları</h6>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-2">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilResimYolu) ? "/img/defaults/default-profile.svg" : Model.ProfilResimYolu)" 
                         class="img-thumbnail" alt="Profil Resmi" style="width: 100%;">
                </div>
                <div class="col-md-10">
                    <dl class="row">
                        <dt class="col-sm-3">Kullanıcı ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Kullanıcı Adı:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>
                        
                        <dt class="col-sm-3">Ad:</dt>
                        <dd class="col-sm-9">@Model.Ad</dd>
                        
                        <dt class="col-sm-3">Soyad:</dt>
                        <dd class="col-sm-9">@Model.Soyad</dd>
                        
                        <dt class="col-sm-3">E-posta:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        
                        <dt class="col-sm-3">Telefon:</dt>
                        <dd class="col-sm-9">@Model.Telefon</dd>
                        
                        <dt class="col-sm-3">Kayıt Tarihi:</dt>
                        <dd class="col-sm-9">@Model.KayitTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-3">E-posta Doğrulandı:</dt>
                        <dd class="col-sm-9">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">Evet</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Hayır</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Roller:</dt>
                        <dd class="col-sm-9">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary">@role</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                @if (!Model.EmailConfirmed)
                {
                    <a asp-action="ConfirmEmail" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="fas fa-check"></i> E-posta Doğrula
                    </a>
                }
            </div>
        </div>
    </div>
</div> 