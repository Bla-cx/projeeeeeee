@model _221103018_OmerFarukBayraktutar.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle"></i> Uyarı!</h5>
                <p>Bu kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                <p>Eğer bu kullanıcının etkinlikleri, rezervasyonları veya sisteme katkıları varsa, bu veriler kaybedilebilir.</p>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-2">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilResimYolu) ? "/img/defaults/default-profile.svg" : Model.ProfilResimYolu)" 
                         class="img-thumbnail" alt="Profil Resmi" style="width: 100%;">
                </div>
                <div class="col-md-10">
                    <dl class="row">
                        <dt class="col-sm-3">Kullanıcı ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Kullanıcı Adı:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>
                        
                        <dt class="col-sm-3">Ad Soyad:</dt>
                        <dd class="col-sm-9">@(Model.Ad + " " + Model.Soyad)</dd>
                        
                        <dt class="col-sm-3">E-posta:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        
                        <dt class="col-sm-3">Roller:</dt>
                        <dd class="col-sm-9">
                            @string.Join(", ", Model.Roles)
                        </dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 