@{
    ViewData["Title"] = "Bilet Kontrol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-qrcode me-2"></i> Bilet Kontrol
                    </h4>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        Bilet barkod numarasını girerek biletin geçerliliğini kontrol edin.
                    </p>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" asp-controller="Rezervasyon" asp-action="BiletKontrol">
                        <div class="mb-3">
                            <label for="barkodNo" class="form-label">Barkod Numarası</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                <input type="text" class="form-control" id="barkodNo" name="barkodNo" required
                                       placeholder="Barkod numarasını girin" autocomplete="off">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search me-1"></i> Kontrol Et
                                </button>
                            </div>
                            <div class="form-text">Bilet üzerindeki barkod numarasını girin.</div>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 