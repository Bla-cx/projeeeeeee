@model IEnumerable<_221103018_OmerFarukBayraktutar.DAL.Models.Kategori>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kategoriler</h1>
        <a href="@Url.Action("Create", "Kategori", new { area = "Admin" })" class="btn btn-success btn-sm">
            <i class="fas fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kategori Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered datatable" id="kategorilerTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.KategoriId</td>
                                <td>@item.KategoriAdi</td>
                                <td>@item.Aciklama</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Kategori", new { area = "Admin", id = item.KategoriId })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>
                                    <a href="@Url.Action("Delete", "Kategori", new { area = "Admin", id = item.KategoriId })" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // No need to manually initialize - datatable-helper.js will handle it
            console.log("Kategori/Index.cshtml loaded - skipping manual initialization");
        });
    </script>
} 