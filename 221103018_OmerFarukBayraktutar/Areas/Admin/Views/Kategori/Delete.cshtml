@model _221103018_OmerFarukBayraktutar.DAL.Models.Kategori
@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kategori Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle"></i> Uyarı!</h5>
                <p>Bu kategoriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
            </div>
            
            <dl class="row">
                <dt class="col-sm-3">Kategori ID:</dt>
                <dd class="col-sm-9">@Model.KategoriId</dd>
                
                <dt class="col-sm-3">Kategori Adı:</dt>
                <dd class="col-sm-9">@Model.KategoriAdi</dd>
                
                <dt class="col-sm-3">Açıklama:</dt>
                <dd class="col-sm-9">@Model.Aciklama</dd>
            </dl>
            
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="KategoriId" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 